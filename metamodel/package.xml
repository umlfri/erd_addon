<?xml version="1.0" encoding="utf-8"?>
<ElementType id="package" xmlns="http://umlfri.org/v2/addon.xsd">
    <Icon path="icons/package.png"/>

    <Structure>
        <Attribute id="name" type="str">
            <Template>
                <Text text="Package"/>
                <Text text="#no"/>
            </Template>
        </Attribute>
        <Attribute id="note" type="text"/>
    </Structure>

    <DisplayName>
        <Text text="#self.name"/>
    </DisplayName>

    <Appearance>
        <Rectangle border="black" topright="rounded" bottomright="rounded" topleft="rounded" bottomleft="rounded">
            <Padding padding="5">
                <TextBox text="#self.name" font="Times New Roman bold 12" color="black"/>
            </Padding>
        </Rectangle>
    </Appearance>
</ElementType>
